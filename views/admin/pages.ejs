<%- include('../_layouts/admin_header'); %>
	
	<h1 class="page-title"  style="font-family: Times New Roman;">Pages</h1>
	<a href="/admin/pages/add-page" class="btn btn-primary"  style="font-size: 20px; font-family: Times New Roman;">Add page</a>
	<br><br>
	
	<table class="table table-dark table-hover" style="font-size: 20px; font-family: Times New Roman;">
		<thead>
			<tr>
				<th>Title</th>
				<th>Created At</th>
				<th>Updated At</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			<% pages.forEach(function(page){ %>
			<tr>
				<td><%= page.title %></td>
				<td><%=page.createdAt.getDate()+"-"+page.createdAt.getMonth()+"-"+page.createdAt.getFullYear()+"  "+page.createdAt.getHours()+":"+page.createdAt.getMinutes()+":"+page.createdAt.getSeconds()%></td>
				<td><%=page.updatedAt.getDate()+"-"+page.updatedAt.getMonth()+"-"+page.updatedAt.getFullYear()+"  "+page.updatedAt.getHours()+":"+page.updatedAt.getMinutes()+":"+page.updatedAt.getSeconds()%></td>
				<td><a href="/admin/pages/edit-page/<%= page.slug %>"  style="color: powderblue;">Edit</a></td>
				<% if(page.slug=="home"){ %>
					<td></td>
				<% } else { %>
					<td><a class="confirmDeletion" href="/admin/pages/delete-page/<%= page._id %>"  style="color: powderblue;">Delete</a></td>
				<% } %>
			</tr>
			<% }); %>
		</tbody>
	</table>
	
	
<%- include('../_layouts/admin_footer') %>